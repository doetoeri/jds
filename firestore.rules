rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule: Allow all read/write access for any authenticated user.
    // This is a simple, permissive rule to ensure app functionality,
    // including signup, works without permission issues.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
